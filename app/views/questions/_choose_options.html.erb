<ul>
    <% sentences = [] %>
    <% if @step == "first" %>
        <% sentences =  question.original_sentence.split(" ") %>
    <% elsif @step == "second" %>    
        <% arr_1 =  question.original_sentence.split(" ").to_a %>
        <% arr_2 = question.similar_words.split(" ").to_a %>
        <% sentences = arr_1.concat(arr_2) %>
    <% end %>
    <% raddom_number = [] %>
    <% (0..sentences.length-1).each{|i| raddom_number << i } %>
    <% raddom_number.shuffle.each do |i| %>
        <%= load_select_item sentences[i] %>
    <% end %>
</ul>