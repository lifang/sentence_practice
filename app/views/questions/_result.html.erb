<div class="tab_con">
    <div class="<%= @status == true ? 'true' : 'false' %>">
        <%= @notice %>
    </div>
    <input type="hidden" class="status" value="<%= @status == true ? 1 : 0 %>" >
    <p style="text-align: left;line-height: 24px;margin: 20px 0; padding-left: 10px;"><%= @question.original_sentence %></p>
    <p style="text-align: left;line-height: 24px;color: #cccccc; padding-left: 10px;"><%= @question.translation %></p>
</div>
<div class="tab_btn"><a href="javascript:void(0)" class="orange_btn" onclick="continue_question(this)">继续</a></div>